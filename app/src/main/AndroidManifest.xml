<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.countrycatalog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CountryCatalog">
        <activity android:name=".view.activity.DetailedCountryActivity"></activity>
        <activity android:name=".view.activity.DetailedHolidayActivity" />
        <activity android:name=".view.activity.EditFavoriteActivity" />
        <activity android:name=".view.activity.FavoriteActivity" />
        <activity android:name=".view.activity.EditProfileActivity" />
        <activity android:name=".view.activity.ProfileActivity" />
        <activity android:name=".view.activity.ContentActivity" />
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>